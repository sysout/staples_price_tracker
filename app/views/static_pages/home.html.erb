<div class="center">
<h1>Welcome to the Staples Price Tracker</h1>
</div>
<div  class="center jumbotron other-color">
<table>
  <thead>
  <tr>
    <th>Product Id</th>
    <th>Product Image</th>
    <th>Product Name</th>
    <th>Current Price</th>
    <th>Subscribers</th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.staples_pid %></td>
        <td><%= link_to image_tag(product.image_url, alt: product.name), "http:#{product.url}", target: "_blank" %></td>
        <td><%= product.name %></td>
        <td><%= "$#{product.price}" %></td>
        <td><%= "#{product.alerts_count}" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>